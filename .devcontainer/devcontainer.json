{
    "name": "Micro Videos Admin - PHP8",
    "dockerComposeFile": ["../docker-compose.yml", "docker-compose.yml"],
    "service": "app",
    "workspaceFolder": "/var/www",
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {},
        "ghcr.io/devcontainers-contrib/features/zsh-plugins:0": {
            "plugins": "git git-flow F-Sy-H zsh-autosuggestions zsh-completions",
            "omzPlugins": "https://github.com/z-shell/F-Sy-H https://github.com/zsh-users/zsh-autosuggestions https://github.com/zsh-users/zsh-completions"
        },
        "ghcr.io/stuartleeks/dev-container-features/shell-history:0": {}
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "felipe.nascimentov.vscode-php",
                "bmewburn.vscode-intelephense-client",
                "xdebug.php-debug",
                "psalm.psalm",
                "php.mssql",
                "phpdebugbar.phpdebugbar",
                "zhuangtongfa.material-theme",
                "brianlhoward.vscode-php-formatter",
                "ikapp.vscode-phpunit",
                "neilbrayfield.php-docblocker",
                "php.solargraph",
                "tabnine.tabnine-vscode",
                "xyz.local-history",
                "esbenp.prettier-vscode",
                "ms-azuretools.vscode-docker",
                "eamodio.gitlens",
                "mhutchie.git-graph",
                "usernamehw.errorlens",
                "jebbs.plantuml",
                "qhoekman.language-plantuml",
                "rvest.vs-code-prettier-eslint",
                "humao.rest-client",
                "donjayamanne.githistory",
                "dbaeumer.vscode-eslint",
                "editorconfig.editorconfig",
                "michelemelluso.gitignore",
                "sdras.night-owl"  // Adicionando a extens√£o do tema Night Owl
            ],
            "settings": {
                "editor.formatOnSave": true,
                "php.validate.executablePath": "/usr/local/bin/php",
                "php.solargraph.languageServerPath": "/usr/local/bin/solargraph",
                "[php]": {
                    "editor.defaultFormatter": "bmewburn.vscode-intelephense-client"
                },
                "files.exclude": {
                    "**/.vscode-server": true,
                    "**/.git": true,
                    "**/.oh-my-zsh": true,
                    "**/dist": true,
                    "**/build": true,
                    "**/vendor": true,
                    "**/.cache": true,
                    "**/.history": true,
                    "**/.local": true,
                    "**/.ssh": true,
                    "**/.gnupg": true,
                    "**/.config": true,
                    "**/.dotnet": true,
                    "**/logs": true,
                    "**/tmp": true,
                    "**/coverage": true,
                    "**/static": true,
                    "**/storage": true,
                    "**/bin": true,
                    "**/obj": true,
                    "**/out": true,
                    "*.zwc": true,
                    "*.zcom*": true,
                    "**/dbdata": true,
                    "*zsh*": true,
                    ".gitconfig": true,
                    "**/docs": true
                },
                "intelephense.files.associations": [
                    "*.php",
                    "*.phtml"
                ],
                "workbench.colorTheme": "Night Owl" 
            }
        }
    },
    "postCreateCommand": "zsh /home/www-data/.docker/start.sh",
    "remoteUser": "www-data",
    "shutdownAction": "none"
}
